<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ****************************   INPUT FIELDS    **************************** -->
    <style name="InputField" parent="Widget.AppCompat.EditText"/>
    <!-- *******  Credentials ******* -->
    <style name="InputField.Credentials" parent="InputField">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">64dp</item>
        <item name="android:layout_marginRight">64dp</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="InputField.Credentials.Email">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="InputField.Credentials.Password">
        <item name="android:inputType">textPassword</item>
    </style>

    <!-- *******  Data ******* -->

    <style name="InputField.Data" parent="InputField">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="InputField.Data.Number">
        <item name="android:inputType">numberSigned</item>
    </style>

    <style name="InputField.Data.Date">
        <item name="android:inputType">date</item>
    </style>

    <style name="InputField.Data.Multiline">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:lines">4</item>
        <item name="android:gravity">top|left</item>
        <item name="android:scrollbars">vertical</item>
    </style>




    <!-- ****************************   BUTTON  **************************** -->
    <style name="Button" parent="Widget.AppCompat.Button.Borderless"/>

    <style name="Button.Flat">
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">64dp</item>
        <item name="android:layout_marginRight">64dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/button_flat</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Button.Google">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginLeft">64dp</item>
        <item name="android:layout_marginRight">64dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>


    <!-- ****************************   LABEL  **************************** -->
    <style name="Label">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="Label.ForgetPassword" parent="Label">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/purple</item>
    </style>

</resources>